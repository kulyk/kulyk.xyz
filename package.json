{
  "name": "blog",
  "private": true,
  "version": "1.0.0",
  "description": "Anton's Blog",
  "scripts": {
    "prettier": "prettier \"src/**/*.+(ts|tsx|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "check-types": "tsc",
    "dev": "next",
    "run-script": "ts-node --project ./src/scripts/tsconfig.json",
    "generate-sitemap": "yarn run-script ./src/scripts/sitemap.ts",
    "generate-feed": "yarn run-script ./src/scripts/rss.tsx",
    "build": "next build",
    "export": "yarn build && yarn generate-sitemap && yarn generate-feed",
    "analyze-bundle": "ANALYZE=true yarn build",
    "validate-project": "npm-run-all check-types check-format lint export"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@mavrin/remark-typograf": "^2.2.0",
    "@zeit/next-source-maps": "^0.0.3",
    "classnames": "^2.3.1",
    "csstype": "^3.0.8",
    "date-fns": "^2.22.1",
    "fathom-client": "^3.0.0",
    "feed": "^4.2.2",
    "glob": "^7.1.7",
    "gray-matter": "^4.0.3",
    "next": "^10.2.3",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-remote": "^2.1.3",
    "next-seo": "^4.24.0",
    "nextjs-sitemap-generator": "^1.3.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-console-emulator": "^3.0.5",
    "react-dom": "^17.0.1",
    "rehype": "^11.0.0",
    "rehype-slug": "^4.0.1",
    "remark-external-links": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-prism": "^1.3.6",
    "remark-toc": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-typescript": "^7.13.0",
    "@next/bundle-analyzer": "^10.2.3",
    "@types/classnames": "^2.3.1",
    "@types/glob": "^7.1.3",
    "@types/node": "^15.6.1",
    "@types/prismjs": "^1.16.5",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-prismjs": "^2.0.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
